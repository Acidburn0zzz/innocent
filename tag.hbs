{{!< default}}

<header id="main-header"{{#if @blog.cover}} class="large"{{/if}}>
	<nav id="main-nav">
		<a class="js-ajax-link js-show-index" id="home-link" href="{{@blog.url}}"><i class="fa fa-angle-left"></i> Home</a>
		<a class="subscribe" id="rss-link" href="{{@blog.url}}/tag/{{tag.slug}}/rss/"><i class="fa fa-rss"></i> {{tag.name}}</a>
	</nav>
	<div class="inner">
		<h1 class="page-title">{{tag.name}}</h1>
	</div>
	{{#if @blog.cover}}
		<div class="site-cover" style="background-image: url({{@blog.cover}})"></div>
	{{/if}}
</header>

<div id="post-index" class="container">

	<main class="content" role="main">
	
		{{#foreach posts}}
	
		<article class="{{post_class}}">
			<div class="inner">
				<header class="post-header">
					<span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{#if tags}}<span class="post-tags">on {{tags separator=" | "}}</span>{{/if}}</span>
					<div class="clear"></div>
					<h2 class="post-title"><a class="js-ajax-link js-show-post" href="{{url}}">{{{title}}}</a></h2>
					{{#if image}}
						<figure class="post-image">
							<img src="{{image}}" alt="" />
						</figure>
					{{/if}}
				</header>
		
				<section class="post-excerpt">
					<p>{{excerpt}}&hellip;</p>
				</section>
			</div>
		</article>
	
		{{/foreach}}
	
		{{pagination}}
	
	</main>

</div>